# Node / TypeScript base ignore
node_modules/
.pnpm-store/

# Logs
logs
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*
pnpm-debug.log*

# Runtime data
pids
*.pid
*.seed
*.pid.lock

# Coverage
coverage
*.lcov

# Build output
/dist
/build
/.turbo

# IDE / Editor
.vscode/
.idea/
.DS_Store

# Env / secrets
# Using .env.default (committed non-secret defaults) + .env.local (gitignored overrides)
.env.local
.env.local.*
!.env.default

# Local override patterns
*.local
*.local.*

# Optional: ignore rules directory if generated externally
/rules/**/*
!/rules/_demo.ts
# Re-include all directories so that specific files (e.g. .gitkeep) can be unignored.
!/rules/**/
!/rules/**/.gitkeep

# TypeScript cache
*.tsbuildinfo

# Misc
.tmp
.cache

# VSCode settings
!/.vscode
LICENSE
