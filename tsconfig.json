{
  "extends": [
    "@tsconfig/node24/tsconfig.json",
    "@tsconfig/strictest/tsconfig.json"
  ],
  "compilerOptions": {
    // Keep NodeNext semantics for ESM (.js extension imports)
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    // Allow JSON imports as before
    "resolveJsonModule": true
    // We rely on base strictness; if any rule is too aggressive can override here.
    // Example relaxations (commented):
    // "noUncheckedIndexedAccess": false,
    // "checkJs": false
  },
  "include": [
    "**/*.ts",
    "rules/featureControls.ts",
    "rules/org1Details.ts",
    "rules/orgMe.ts",
    "rules/teamsMe.ts",
    "rules/traceLink.ts",
    "rules/user121.ts",
    "rules/utmSetting.ts"
  ],
  "exclude": ["node_modules"]
}
